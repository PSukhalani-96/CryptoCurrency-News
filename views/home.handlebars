<div class="container">
	<div class="jumbotron">
		<h1 class="display-4">Welcome to Crypto News Network</h1> 
		<hr class="my-4">
		<h2> <i class="far fa-newspaper fa-lg fa-fw"></i> Latest CryptoCurrency News!!! </h2>
	</div>

	<br>

	<table class="table table-striped table-bordered table-hover">
	  	<thead>
		    <tr>
		    	<th scope="col">Name</th>
				<th scope="col">Price</th>
				<th scope="col">Daily High</th>
				<th scope="col">Daily Low</th>
				<th scope="col">Market Cap</th>
		    </tr>
	  	</thead>
	  
	  	<tbody>
	  		{{#each price.DISPLAY}}
		    	<tr>
		      		<td>{{@key}}</td>
		      		<td>{{this.USD.PRICE}}</td>
		      		<td>{{this.USD.HIGHDAY}}</td>
		      		<td>{{this.USD.LOWDAY}}</td>
		      		<td>{{this.USD.MKTCAP}}</td>
		    	</tr>
	    	{{/each}}
	  	</tbody>
	</table>

	<br> <br>

	<div class="row">
		{{#each api.Data}}
			<div class="col-sm d-flex" style="padding: 0 15px; grid-row-gap: 50px;">
			<!-- <div class="d-flex flex-row">	 -->
				<div class="card card-body flex-fill mb-4" style="width: 16rem;">
				  	<img src="{{ this.imageurl }}" class="card-img-top" alt="{{ this.source }}">
				  	<div class="card-body">
				    	<h5 class="card-title">{{ this.title }}</h5>
				    	<p class="card-text">{{{ this.body }}}</p>
				    	<a href="{{ this.url }}" class="btn btn-info">Read More...</a>
				  	</div>
				</div>
				<br>
			</div>
		{{/each}}
		<br>
	</div>

	<br> <br> <br>
			
